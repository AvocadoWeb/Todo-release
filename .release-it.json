{
  "github": {
    "release": {
      "tagName": "v${version}",
      "name": "Release ${version}",
      "notes": "${changelog}"
    }
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "header": "# Новое",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  }
}