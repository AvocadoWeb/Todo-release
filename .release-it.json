{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventional",
        "header": "# Changelog",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  }
}