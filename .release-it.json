{
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "header": "# Changelog",
      "preset": {
        "name": "angular",
        "issue-url": "https://gitlab.com/levotarayan98/airways/-/issues/{{id}}",
        "issue-pattern": "#(\\d+)",
        "types": [
          {
            "type": "build",
            "section": "Build",
            "release": "patch"
          },
          {
            "type": "ci",
            "section": "CI",
            "release": "patch"
          },
          {
            "type": "docs",
            "section": "Docs",
            "release": "minor"
          },
          {
            "type": "feat",
            "section": "Features",
            "release": "major"
          },
          {
            "type": "fix",
            "section": "Bug Fixes",
            "release": "patch"
          },
          {
            "type": "chore",
            "section": "Chores",
            "release": "patch"
          },
          {
            "type": "perf",
            "section": "Performance Improvements",
            "release": "patch"
          },
          {
            "type": "refactor",
            "section": "Refactor",
            "release": "minor"
          },
          {
            "type": "style",
            "section": "Styles",
            "release": "patch"
          },
          {
            "type": "test",
            "section": "Test",
            "release": "minor"
          },
          {
            "type": "security",
            "section": "Security",
            "release": "patch"
          },
          {
            "type": "deprecated",
            "section": "Deprecations",
            "release": "minor"
          }
        ],
        "prerelease": {
          "section": "Pre-Releases",
          "release": "prerelease"
        },
        "increment": {
          "unreleased": false,
          "beta": "prerelease",
          "alpha": "prerelease"
        }
      }
    }
  }
}